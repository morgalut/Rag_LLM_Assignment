# PostgreSQL Connection
DB_HOST=rag_pgvector_db
DB_PORT=5432
DB_USER=raguser
DB_PASSWORD=ragpass
DB_NAME=ragdb

# Optional full DSN (not used by config.py but fine to keep)
DATABASE_URL=postgresql://raguser:ragpass@rag_pgvector_db:5432/ragdb

# Data and Index Paths
DATA_PATH=/app/data/arxiv_2.9k.jsonl
INDEX_DIR=/app/index

# Embeddings / Models
RETRIEVER_BACKEND=pgvector
EMBEDDING_BACKEND=ollama
EMBEDDING_DIM=768
GENERATION_MODEL=llama3.2:3b
EMBEDDING_MODEL=nomic-embed-text

# Ollama connectivity
OLLAMA_HOST=http://rag_ollama:11434  # âœ… internal hostname between containers

# Other
RAG_MIN_SIMILARITY=0.35
